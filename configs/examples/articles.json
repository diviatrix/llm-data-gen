{
  "meta": {
    "name": "Blog Articles Generator",
    "version": "1.0",
    "description": "Generate blog articles with metadata"
  },
  "api": {
    "provider": "openrouter",
    "model": "openrouter/auto",
    "temperature": 0.8,
    "maxTokens": 3000
  },
  "output": {
    "type": "array",
    "outputPath": "./output/articles/",
    "fileNameTemplate": "{topic_translit}.json"
  },
  "schema": {
    "type": "object",
    "properties": {
      "articles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "x-llm-generate": {
                "template": "ART_{topic_translit}_{index}"
              }
            },
            "title": {
              "type": "string",
              "x-llm-generate": {
                "prompt": "Create an engaging article title about {topic}",
                "maxLength": 100
              }
            },
            "summary": {
              "type": "string",
              "x-llm-generate": {
                "prompt": "Write a brief summary of the article (2-3 sentences)",
                "minLength": 100,
                "maxLength": 250
              }
            },
            "author": {
              "type": "string",
              "x-llm-generate": {
                "prompt": "Generate a realistic author name"
              }
            },
            "publishDate": {
              "type": "string",
              "format": "date",
              "x-llm-generate": {
                "prompt": "Generate a publication date in the last 30 days (YYYY-MM-DD format)"
              }
            },
            "readTime": {
              "type": "integer",
              "x-llm-generate": {
                "description": "Estimated reading time in minutes",
                "range": [3, 15]
              }
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "x-llm-generate": {
                "prompt": "Generate 3-6 relevant tags for the article",
                "minItems": 3,
                "maxItems": 6
              }
            },
            "featured": {
              "type": "boolean",
              "x-llm-generate": {
                "description": "Random featured status"
              }
            }
          },
          "required": ["id", "title", "summary", "author", "publishDate", "readTime", "tags"]
        }
      }
    }
  },
  "prompts": {
    "system": "You are a content creator specializing in blog articles. Generate realistic article metadata that would appear on a modern blog platform. Ensure all content is engaging and professional. Return only valid JSON."
  },
  "generation": {
    "tasks": [
      {"topic": "Technology Trends", "count": 10},
      {"topic": "Health and Wellness", "count": 8},
      {"topic": "Travel Destinations", "count": 12}
    ]
  }
}